
<li id="<%= post.id %>">
    <div class="post-container">
        <span class="post-user"> <%= post.user.name %> </span>
        <div class="post-content">
            <%= post.content %>
        </div>
        <a href="/posts/destroy/<%= post._id %>">
            <img src="images/delete.png" alt="Delete" width="25" height="20">
        </a>
    </div>

    <div class="comments-container">
        <% for(let comment of post.comments){ %>
            <div class="comment-content">
                <%= comment.content %>
            </div>
            <span class="comment-user">
                <%= comment.user.name %>
            </span>
            <a href="/comments/destroy/<%= comment._id %>">
                <img src="images/delete.png" alt="Delete" width="25" height="20">
            </a>
        <% } %>


        <!-- Comment create form should be shown only when user is logged in-->
        <% if(locals.user){ %>
            <form action="/comments/create" id="create-comments" method="POST">
                <input type="text" name="content" placeholder="Type here to add comment ...">
                <input type="hidden" name="post" value="<%= post.id %>">
                <input type="submit" value="Add Comment">
            </form>
        <% } %>
    </div>
</li>