<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- cdn for noty.js -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

    <title>
        <%= title %>
    </title>

    <%- style %>
</head>

<body>

    <%- include('_header') %>

    <%- body %>

    <!-- <%- include('_footer') %> -->

    <%- script %>

    <script>            //using script tag is necessary for this Noty notification
        <% if(flash.success && flash.success.length>0){ %> 
            new Noty({
                theme: 'relax',
                text: "<%= flash.success %>",
                type: 'success',
                layout: 'topRight',
                timeout: 1000
            }).show();
        <% } %>

        <% if(flash.error && flash.error.length>0){ %> 
            new Noty({
                theme: 'relax',
                text: "<%= flash.error %>",
                type: 'error',
                layout: 'topRight',
                timeout: 500
            }).show();
        <% } %>
    </script>


</body>

</html>