<link rel="stylesheet" href="/css/home.css">

<h2>Posts</h2>
<section id="feed-posts">

    <!-- we should display form to create post only when user is logged in -->
    <% if(locals.user) { %>
        <form action="/posts/create" method="post" id="new-post-form">
            <textarea name="content" cols="30" rows="3" placeholder="Post here ......"></textarea>
            <input type="submit" value="Post">
        </form>
        <% } %>

            <ul id="posts-list">
                <% for(let post of posts){ %>

                    <%- include('_post', {post: post}) %>

                <% } %>
            </ul>
</section>

<!-- Friends list -->
<aside id="friends-list">
    <% if(locals.user){ %>
    <% for(let user of all_users) { %>
        <p>
            <a href="/users/profile/<%= user._id %>">
                <%= user.name %>
            </a>
        </p>
    <% } %>
    <% } %>
</aside>